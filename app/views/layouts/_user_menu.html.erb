<% if current_user.present? %>
  <li class="nav-item dropdown">
    <a href="#" class="nav-link dropdown-toggle d-flex align-items-center" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <img src="<%= current_user.user_image_url %>" width="25" class="rounded mr-2" />
      <span class="mr-1"><%= current_user.username %></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
      <%= link_to t('actions.user_settings', default: "User Settings"), profiles_path, class: 'dropdown-item' %>
      <div class="dropdown-divider"></div>
      <%= link_to t('actions.sign_out', default: "Sign out"), destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
    </div>
  </li>
<% else %>
  <li class="nav-item">
    <%= link_to t('actions.sign_in', default: "Sign in"), new_user_session_path, class: "nav-item nav-link" %>
  </li>
<% end %>
